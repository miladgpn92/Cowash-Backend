@model HeaderVCModel
@{
    bool? IsIndex = ViewBag.IsIndex;
    if (IsIndex == null)
        IsIndex = false;


    bool hasHeader = true;

    if (ViewBag.HasHeader != null)
    {
        hasHeader = false;
    }
    
}



@if (hasHeader == true)
{


    <!-- Header Start -->
    <header class="main-header">
        <div class="header-sticky">
            <nav class="navbar navbar-expand-lg">
                <div class="container">
                    <!-- Logo Start -->
                    <a class="navbar-brand" href="/">
                        <img src="@Model.Setting.LogoUrl" alt="@Model.Setting.SiteTitle">
                    </a>
                    <!-- Logo End -->
                    <!-- Main Menu Start -->
                    <div class="collapse navbar-collapse main-menu">
                        <div class="nav-menu-wrapper">


                            <ul class="navbar-nav mr-auto" id="menu">


                                @foreach (var item in Model.Menus.Where(a => a.parentId == 0).ToList())
                                {
                                    <li class='nav-item @(Model.Menus.Any(a => a.parentId == item.id) ? "submenu":"")'>
                                        <a href="@item.link" data-href="@item.link" class="nav-link">@item.text</a>
                                        @if (Model.Menus.Any(a => a.parentId == item.id))
                                        {
                                            <ul>

                                                @foreach (var step2 in Model.Menus.Where(a => a.parentId == item.id).ToList())
                                                {
                                                    <li class="nav-item">
                                                        <a class="nav-link" href="@step2.link" data-href="@item.link">
                                                            @step2.text
                                                        </a>
                                                    </li>
                                                }




                                            </ul>
                                        }
                                    </li>
                                }


                            </ul>
 
                        </div>
                        <!-- Header Contact Box Start -->
                        <div class="header-btn">
                            <a href="/menu" class="btn-default">منو دیژون</a>
                        </div>
                        <!-- Header Contact Box End -->
                    </div>
                    <!-- Main Menu End -->
                    <div class="navbar-toggle"></div>
                </div>
            </nav>
            <div class="responsive-menu"></div>
        </div>
    </header>



}
