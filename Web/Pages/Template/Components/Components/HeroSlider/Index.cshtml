@using SharedModels.Dtos
@model List<SliderSelectDto>


<!-- Hero Section Start -->
<div class="hero hero-slider-layout">
    <div class="swiper">
        <div class="swiper-wrapper">

            @foreach (var item in Model)
            {
                <!-- Hero Slide Start -->
                <div class="swiper-slide">
                    <div class="hero-slide" style="background-image:url(@item.PicUrl);position: relative;background-repeat: no-repeat;background-position: center center;background-size: cover;padding: 214px 0 100px;">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-lg-6">
                                    <!-- Hero Content Start -->
                                    <div class="hero-content">
                                        <!-- Section Title Start -->
                                        <div class="section-title">
                                            <h3 class="wow fadeInUp">@item.TopTitle</h3>
                                            <h1 class="" data-cursor="-opaque">@item.Title <span>دیژون</span></h1>
                                            <p class="wow fadeInUp" data-wow-delay="0.2s">
                                                @item.Description
                                            </p>
                                        </div>
                                        <!-- Section Title End -->
                                        <!-- Hero Button Start -->
                                        <div class="hero-btn wow fadeInUp" data-wow-delay="0.4s">
                                            <a href="/menu" class="btn-default">منو دیژون</a>
                                            <a href="/contactus" class="download-app-btn"><i class="fa-solid fa-phone-flip"></i>  رزرواسیون </a>
                                        </div>
                                        <!-- Hero Button End -->
                                    </div>
                                    <!-- Hero Content End -->
                                </div>

                                <div class="col-lg-6">
                                    <!-- Hero Images Start -->
                                    <div class="hero-images">
                                        <!-- Hero Image Start -->
                                        <div class="hero-image">
                                            <figure class="image-anime">
                                                <vc:content id="1" alt="  تصویر رستوران دیژون"></vc:content>
                                             
                                            </figure>
                                        </div>
                                        <!-- Hero Image End -->
                                        <!-- Hero Circle Image Start -->
                                        <div class="hero-circle-img-1">
                                            <figure class="image-anime">
                                                <vc:content id="2" alt="  تصویر رستوران دیژون"></vc:content>
                                            </figure>
                                        </div>
                                        <!-- Hero Circle Image End -->
                                        <!-- Hero Circle Image Start -->
                                        <div class="hero-circle-img-2">
                                            <figure class="image-anime">
                                                <vc:content id="3" alt="  تصویر رستوران دیژون"></vc:content>
                                            </figure>
                                        </div>
                                        <!-- Hero Circle Image End -->
                                    </div>
                                    <!-- Hero Images End -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Hero Slide End -->
            }

      
        </div>
    </div>
</div>