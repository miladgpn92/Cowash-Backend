@using SharedModels.Dtos.Shared;
@model List<TeamSelectDto>
@{
    double Delay = 0.15;
}
 

<!-- Our Team Section Start -->
<div class="our-team">
    <div class="container">
        <div class="row section-row">
            <div class="col-lg-12">
                <!-- Section Title Start -->
                <div class="section-title">

                    <vc:content id="70" tag="h3" class="wow fadeInUp"></vc:content>
 
                    <h2 class=" " data-cursor="-opaque">
                        <span><vc:content id="71"></vc:content> </span><vc:content id="72"></vc:content>
                    </h2>
                </div>
                <!-- Section Title End -->
            </div>
        </div>

        <div class="row">

         

            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <vc:team-card title="@item.FullName" job="@item.JobPosition" pic="@item.PicUrl" delay="@Delay"></vc:team-card>

                </div>
       
                Delay = Delay + 0.15;
            }


     

            <div class="col-lg-12">
                <!-- Section Footer Text Start -->
                <div class="section-footer-text wow fadeInUp" data-wow-delay="0.8s">
                    <p>
                        <vc:content id="73"></vc:content> –

                        <a href="/team">این ما هستیم</a>
                    </p>

                </div>
                <!-- Section Footer Text End -->
            </div>
        </div>
    </div>
</div>
<!-- Our Team Section End -->