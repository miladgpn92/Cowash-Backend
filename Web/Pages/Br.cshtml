@page
@model Web.Pages.BrModel
@{
    ViewBag.HasHeader = false;
    ViewBag.HasFooter = false;
}
@section Header{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <!-- Flipbook StyleSheet -->
    <link href="~/Catalog/dflip/css/dflip.min.css" rel="stylesheet" type="text/css">

    <!-- Icons Stylesheet -->
    <link href="~/Catalog/dflip/css/themify-icons.min.css" rel="stylesheet" type="text/css">
    <style>
        body {
            direction: rtl;
            overflow: hidden;
        }
    </style>
}

<div>

    <div class="row">

        <div class="col-xs-12">
            <!--Normal FLipbook-->
            <div class="_df_book" height="500vh" direction="2" webgl="true" backgroundcolor="teal"
                 source="@Model.Setting.CatalogUrl?.Trim('[', ']', '"')"
                 id="df_manual_book">
            </div>

        </div>
    </div>
</div>

@section Scripts{
    <!-- jQuery  -->
    <script src="~/Catalog/dflip/js/libs/jquery.min.js" type="text/javascript"></script>
    <!-- Flipbook main Js file -->
    <script src="~/Catalog/dflip/js/dflip.min.js" type="text/javascript"></script>
}