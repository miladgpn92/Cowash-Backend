@model FooterVCModel
@{
    bool hasFooter = true;
    if (ViewBag.HasFooter != null)
    {
        hasFooter = false;
    }
}
<!-- footer call to action area start -->
@if (hasFooter == true)
{

    <!-- Reserve Table Section Start -->
    <div class="reserve-table">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <!-- Reserve table Content Start -->
                    <div class="reserve-table-content">
                        <!-- Section Title Start -->
                        <div class="section-title">
                            <vc:content id="22" tag="h3" class="wow fadeInUp"></vc:content>

                            <h2 class="" data-cursor="-opaque"> <vc:content id="23"></vc:content> <span><vc:content id="24"></vc:content></span></h2>
                        </div>
                        <!-- Section Title End -->
                        <!-- Reserve Table Body Start -->
                        <div class="reserve-table-body wow fadeInUp" data-wow-delay="0.2s">
                            <vc:content id="25" tag="h3"></vc:content>
 
                            <ul>
                                <li> <vc:content id="26"></vc:content> <span>    <vc:content id="27"></vc:content>   </span></li>
                                <li>   <vc:content id="28"></vc:content>  <span> <vc:content id="29"></vc:content> </span></li>
                            </ul>
                        </div>
                        <!-- Reserve Table Body End -->
                    </div>
                    <!-- Reserve table Content End -->
                </div>

                <div class="col-lg-6">
                    <!-- Hero Images Start -->
                    <div class="hero-images">
                        <!-- Hero Image Start -->
                        <div class="hero-image">
                            <figure class="image-anime">

                                <vc:content id="30" alt="کافه و رستوران دیژون"></vc:content>

                                
                            </figure>
                        </div>
                        <!-- Hero Image End -->
                        <!-- Hero Circle Image Start -->
                        <div class="hero-circle-img-1">
                            <figure class="image-anime">
                                <vc:content id="31" alt="کافه و رستوران دیژون"></vc:content>
                                
                            </figure>
                        </div>
                        <!-- Hero Circle Image End -->
                        <!-- Hero Circle Image Start -->
                        <div class="hero-circle-img-2">
                            <figure class="image-anime">
                                <vc:content id="32" alt="کافه و رستوران دیژون"></vc:content>
                            </figure>
                        </div>
                        <!-- Hero Circle Image End -->
                    </div>
                    <!-- Hero Images End -->
                </div>
            </div>
        </div>
    </div>
    <!-- Reserve Table Section End -->


    <footer class="main-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <!-- Footer Content Start -->
                    <div class="footer-content">
                        <!-- Footer Logo Start -->
                        <div class="footer-logo">
                            <img src="~/Template/images/Dijon/logo/logo.png" alt="لوگو دیژون">
                        </div>
                        <!-- Footer Logo End -->
                        <!-- Footer Contact Box Start -->
                        <div class="footer-contact-box">
                            <!-- Footer Contact Item Start -->
                            <div class="footer-contact-item">
                                <div class="icon-box">
                                    <img src="~/Template/images/icon-location.svg" alt="">
                                </div>
                                <div class="footer-contact-content">
                                    <p><a href="https://nshn.ir/?lat=@Model.Setting.Latitude&lng=@Model.Setting.Longitude" target="_blank">  آدرس ما: @Model.Setting.Address <small>مسیریابی</small></a></p>
                                </div>
                            </div>
                            <!-- Footer Contact Item End -->
                            <!-- Footer Contact Item Start -->
                            <div class="footer-contact-item">
                                <div class="icon-box">
                                    <img src="~/Template/images/icon-phone.svg" alt="">
                                </div>
                                <div class="footer-contact-content">
                                    <p><a href="tel:@Model.Setting.Tell">شماره تماس: @Model.Setting.Tell</a></p>
                                </div>
                            </div>
                            <!-- Footer Contact Item End -->
                        </div>
                        <!-- Footer Contact Box End -->
                    </div>
                    <!-- Footer Content End -->
                </div>
            </div>

            <!-- Footer Copyright Section Start -->
            <div class="footer-copyright">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <!-- Footer Social Icon Start -->
                        <div class="footer-social-icon">
                            <ul>
                                @if (!string.IsNullOrEmpty(Model.GlobalSetting.InstagramLink))
                                {
                                    <li><a href="@Model.GlobalSetting.InstagramLink"><i class="fa-brands fa-instagram"></i></a></li>
                                }
                                @if (!string.IsNullOrEmpty(Model.GlobalSetting.TelegramLink))
                                {
                                    <li><a href="@Model.GlobalSetting.TelegramLink"><i class="fa-brands fa-telegram"></i></a></li>
                                }
                               
                      
                             
                                
                            </ul>
                        </div>
                        <!-- Footer Social Icon End -->
                    </div>

                    <div class="col-lg-6 col-md-6">
                        <!-- Footer Copyright Start -->
                        <div class="footer-copyright-text">
                            <p>تمامی حقوق وب‌سایت متعلق به رستوران دیژون     است - طراحی و اجرا <a href="https://jaryan.agency/">آژانس جریان</a></p>
                        </div>
                        <!-- Footer Copyright End -->
                    </div>
                </div>
            </div>
            <!-- Footer Copyright Section End -->
        </div>
    </footer>

}
